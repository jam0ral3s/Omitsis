<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Test Omitsis{% endblock %}</title>
        {% block css %}
            <link rel="stylesheet" href="{{ asset('bundles/home/css/demo.css') }}" />
        {% endblock %}
    </head>
    <body>
        <div id="symfony-wrapper">
            <div id="symfony-header">
                <ul>
                    <li><a href="{{ path('home.inicio') }}" >Inicio</a></li>
                    <li><a href="{{ path('home.lista_hoteles') }}" >Lista de Hoteles</a></li>
                    <li><a href="{{ path('home.reservar') }}" >Reservar</a></li>
                </ul>
            </div>

            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="flash-message">
                    <em>Notice</em>: {{ flashMessage }}
                </div>
            {% endfor %}

            {% block content_header %}
                <ul id="menu">
                    {% block content_header_more %}
                    {% endblock %}
                </ul>

                <div style="clear: both"></div>
            {% endblock %}

            <div class="symfony-content">
                {% block content %}
                {% endblock %}
            </div>

        </div>
        {% block scripts %}
            <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
        {% endblock %}
    </body>
</html>
